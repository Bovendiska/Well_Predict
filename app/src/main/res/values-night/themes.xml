<resources>

    <!-- Base Theme for your application -->
    <style name="Base.Theme.CapstoneBangkit" parent="Theme.Material3.DayNight">
        <!-- General theme settings for light mode -->
        <item name="android:windowNoTitle">true</item> <!-- Removes window title -->
        <item name="colorPrimaryDark">@color/teal</item> <!-- Accent color for status bar -->
        <item name="android:colorBackground">@color/nightRider</item> <!-- App background color -->
        <item name="colorOnPrimary">@color/white</item> <!-- Text color on primary background -->
        <item name="colorOnSurface">@color/black</item> <!-- Text color on surface -->
        <item name="android:statusBarColor">@color/nightRider</item> <!-- Status bar color -->
        <item name="android:windowLightStatusBar">false</item> <!-- Dark status bar icons in light mode -->
    </style>

    <!-- Style settings for general text -->
    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/argent</item> <!-- Text color -->
    </style>

    <style name="TextContent.Regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.Regular.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.Regular.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.Regular.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextContent.Regular.ExtraLarge">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style settings for sub-heading text -->
    <style name="TextContent.SubHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/argent</item>
        <item name="android:textSize">16sp</item> <!-- Text size -->
    </style>

    <!-- Style settings for body text -->
    <style name="TextContent.BodyText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style settings for chip text -->
    <style name="TextContent.Chip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style settings for activity title text -->
    <style name="TextContent.ActivityTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style settings for bold text -->
    <style name="TextContent.Bold">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style settings for bold heading text -->
    <style name="TextContent.Bold.Heading">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!-- Style settings for bold sub-heading text -->
    <style name="TextContent.Bold.SubHeading">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Style settings for bold caption text -->
    <style name="TextContent.Bold.Caption">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Style settings for medium text -->
    <style name="TextContent.Medium">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style settings for semi-bold text -->
    <style name="TextContent.SemiBold">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style settings for white bold text -->
    <style name="TextContent.Bold.White">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style settings for white medium text -->
    <style name="TextContent.Medium.White">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style settings for white semi-bold text -->
    <style name="TextContent.SemiBold.White">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Poppins Light styles -->
    <style name="TextContent.Light">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextContent.Light.Heading">
        <item name="android:textSize">34sp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="backgroundTint">@color/nightRider</item> <!-- Background color -->
        <item name="itemTextAppearanceInactive">@color/white</item> <!-- Inactive item text color -->
        <item name="itemBackground">@drawable/bg_bottom_nav_item</item> <!-- Item background -->
        <item name="itemIconTint">@color/white</item> <!-- Icon tint -->
        <item name="itemTextColor">@color/white</item> <!-- Item text color -->
    </style>

    <!-- Chip Style -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Input">
        <item name="chipBackgroundColor">@color/charcoal</item> <!-- Chip background color -->
        <item name="chipStrokeWidth">0dp</item> <!-- Chip stroke width -->
        <item name="checkedIconVisible">false</item> <!-- Checked icon visibility -->
        <item name="shapeAppearanceOverlay">@null</item> <!-- Shape overlay -->
        <item name="android:textAppearance">@style/TextContent.Chip</item> <!-- Text appearance -->
        <item name="rippleColor">@android:color/transparent</item> <!-- Ripple color -->
        <item name="android:focusable">false</item> <!-- Not focusable -->
        <item name="android:clickable">false</item> <!-- Not clickable -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Logout Button   -->
    <style name="Widget.MyApp.LogoutButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/red</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center|start</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Application theme inheriting the base theme -->
    <style name="Theme.CapstoneBangkit" parent="Base.Theme.CapstoneBangkit" />

</resources>