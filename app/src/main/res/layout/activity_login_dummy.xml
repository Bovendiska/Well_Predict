<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.authentication.LoginDummyActivity">

    <ImageView
        android:id="@+id/iv_logo_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/logo_image"
        android:src="@drawable/ic_logo_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        style="@style/TextContent.Light.Heading"
        android:paddingTop="95dp"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="@+id/iv_logo_image"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/iv_logo_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo_image" />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextContent.Black"
        android:text="@string/please_enter_your_account"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/tv_email_input_title"
        style="@style/TextContent.BodyText"
        android:paddingTop="20dp"
        android:text="@string/email"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/argent"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="@+id/tv_email_input_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_input_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_underline_text_input"
            android:inputType="textEmailAddress"
            android:textColor="@color/argent" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_password_input_title"
        style="@style/TextContent.BodyText"
        android:paddingTop="20dp"
        android:text="@string/password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_email_input_title"
        app:layout_constraintTop_toBottomOf="@+id/emailInputLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        app:endIconMode="clear_text"
        app:endIconTint="@color/argent"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="@+id/tv_password_input_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_input_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_underline_text_input"
            android:inputType="textEmailAddress"
            android:textColor="@color/argent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_diagnose"
        style="@style/TextContent.SubHeading"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/teal"
        android:text="@string/login"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordInputLayout"
        app:cornerRadius="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>